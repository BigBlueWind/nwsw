#-------------------------------------------------------------#
#File/Obj macros             
#-------------------------------------------------------------#
SSR_SRC_FILES= ipc.c


SSR_OBJ_FILES  := $(patsubst %.c, $(OUT_DIR)/%.o, $(SSR_SRC_FILES) )
	
ALL_INC= $(SSRCM_INC) $(CM_INC)

BUILD_PREFIX            := "==> Building"
V                       := @ 

#-------------------------------------------------------------#
#Compiler macros             
#-------------------------------------------------------------#
#SSR ObjectFiles
$(OUT_DIR)/%.o: $(IN_DIR)/%.c
	@echo $(BUILD_PREFIX) $@
	$(V) $(CC) -c $(COPTS) $(IOPTS) $(POPTS) $< -o $@

#-------------------------------------------------------------#
#Linker macros             
#-------------------------------------------------------------#
$(LIB_DIR)/libssr_$(EXE).a:$(SSR_OBJ_FILES) $(ALL_INC)
	$(V) ar -cr $(LIB_DIR)/libssr_$(EXE).a $(SSR_OBJ_FILES)	

#-------------------------------------------------------------#
#Clean macros             
#-------------------------------------------------------------#
clean:
	\rm -f $(LIB_DIR)/libssr_$(EXE).a $(SSR_OBJ_FILES)

